Drop table if exists  `library2`.`publication_authors`;
  CREATE TABLE `library2`.`publication_authors` (
  `publication_id` VARCHAR(50) NOT NULL,
  `author_id` VARCHAR(50) NOT NULL,
  PRIMARY KEY (`publication_id`, `author_id`));
  
